{% extends "base.html.twig" %}

{% block body %}

    <article>
        <h2>{{ figure.nom }}</h2>
        <div class="metadata">Ecrit le {{ figure.dateCreation | date('d/m/Y') }} à {{ figure.dateCreation | date('H:i') }} difficulté {{ figure.groupe.titre }}</div>
            <div class="metadata">Modifié le {{ figure.dateModification | date('d/m/Y') }} à {{ figure.dateModification | date('H:i') }}</div>
            <div class="content">
                <img src="https://via.placeholder.com/350x150" alt="">
                {{ figure.description | raw }}
            </div>
            <a class="btn btn-primary" href="{{ path('app_figure_edit', {'id':figure.id}) }}">Modifier la figure</a>
        </div>

    </article>

    <section id="commentaires">
        {% for commentaire in figure.commentaires %}
            <div class="commentaire">
                <div class="row">
                    <div class="col-3">
                        <p>nom auteur</p> (<small>{{commentaire.dateCreation | date('d/m/Y à H:i')}}</small>)
                    </div>
                    <div class="col">
                        {{commentaire.contenu | raw}}
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>

{% endblock %}