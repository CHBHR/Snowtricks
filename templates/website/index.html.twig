{% extends "base.html.twig" %}

{% block body %}

    <img class="img-fluid mt-3" src="https://images2.alphacoders.com/484/484868.jpg">
    
    <h1>Welcome to Snowtricks</h1>

    <h3>Le site pour le partage d'informations sur les figures de snowboard!</h3>
    <p>Ici on parle de snow! Consulte les tricks documenté par la communauté, ajoute des informations, photos et vidéos et participe à des discussions figure par figure avec les autres membres. Aide à créer, améliorer et modifier les informations présentes pour faire de ce site une référence dans le monde du snow!</p>

    <section class="figures" id="liste_figures">

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-5">

            {% for figure in figures.data %}

            <div class="card bg-secondary col align-top mt-2">
                <div class="card-body d-flex flex-column justify-content-between">
                    {# <div class="metadata card-text">Ecrit le {{ figure.dateCreation | date('d/m/Y') }} à {{ figure.dateCreation | date('H:i') }} difficulté {{ figure.groupe.titre }}</div> #}
                    <div>
                        {% if figure.images is empty  %}
                            <img class="card-img-top" src="https://via.placeholder.com/350x150"  alt="Card image cap">
                        {% else %}
                            <img class="card-img-top img-responsive" src="{{ asset('/uploads/'~ figure.images[0].nom) }}" alt="Card image cap">
                        {% endif %}
                    </div>
                    <div class="d-flex justify-content-around mt-3">
                        <a href="{{ path('app_figure_show', {'id':figure.id}) }}" class="btn btn-primary">{{ figure.nom | length > 18 ? figure | slice(0, 16) ~ '...' : figure.nom }}</a>
                        {% if app.user %}
                            <a href="{{ path('app_figure_edit', {'id':figure.id}) }}" class="btn btn-success"><i class="bi bi-pencil-fill"></i></a>
                            
                            {% include "_partials/_figureDeleteForm.html.twig" %}

                        {% endif %}
                    </div>

                </div>
            </div>
        {% endfor %}
        </div>
    
        {% set path = 'app_home' %}
        {% set nbFiguresMax = figures.nbFiguresMax %}
        {% set limit = figures.limit %}
        {% include "_partials/_loadMore.html.twig" %}

    </section>
    <div class=" d-sm-none d-lg-flex justify-content-end">
        {% if figures.data | length > 15 %}
            <a href="#liste_figures" class="btn btn-info"><i class="bi bi-arrow-up-circle-fill"></i></a>
        {% endif %}
    </div>
    
{% endblock body %}
