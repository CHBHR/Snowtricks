{% extends 'base.html.twig' %}

{% block body %}

    <h1>Demande d'un nouveau mot de passe</h1>

    <form action="{{ path('app_security_oubliePass') }}" method="post" class="mt-3">
        <div class="form-group">
            <label>Adresse email</label>
            <input placeholder="Adresse email" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Demander un nouveau mot de passe</button>
        </div>
    </form>

{% endblock %}