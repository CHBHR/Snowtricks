{% extends 'base.html.twig' %}

{% block body %}

    <h1>Formulaire d'Inscription</h1>

    {{ form_start(form) }}
    
    {{ form_row(form.nomUtilisateur, {
        'label': 'Nom d\'utilisateur',
        'attr': {'placeholder': 'SuperGnomeDu28'}
    }) }}
    {{ form_row(form.email, {
        'label': "Email",
        'attr': {'placeholder': 'email@mail.com'}
    }) }}
    {{ form_row(form.motDePasse, {
        'label': "Mot de passe"
    }) }}
    {{ form_row(form.confirmerMotDePasse, {
        'label': "Confirmer votre mot de passe"
    }) }}

    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}

{% endblock %}